{
    "manifest_version": 3,
    "name": "全局HTTP认证代理",
    "version": "1.0",
    "description": "为Chrome设置全局带认证的HTTP代理",
    "permissions": [
      "proxy",
      "storage",
      "webRequest",
      "webRequestAuthProvider"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "options_page": "options.html",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }